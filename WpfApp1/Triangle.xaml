<Window x:Class="WpfApp1.Triangle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Height="700" 
        Width="500"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">

    <Border CornerRadius="30"
            Background="#27374D">

        <!--Stat-->
        <Grid>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="190"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="150"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--Button Close-->
            <StackPanel Grid.Row="0">
                <Button Background="Transparent"
                        HorizontalAlignment="Right"
                        Margin="10" 
                        Click="Button_Click"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate>
                            <Image Source="img/cross.png"
                                   Width="30"/>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
            <!--Logo-->
            <StackPanel Grid.Row="1"
                        Height="80"
                        Width="240">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="70"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="60"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <Image Source="img/letter-t-.png"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                Margin="-90,20,0,0"
                                Width="70">
                        <Image Source="img/letter-r.png"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2"
                                Margin="-160,35,30,0">
                        <Image Source="img/i.png"
                               Width="40"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3"
                                Margin="-190,35,100,0">
                        <Image Source="img/a.png"
                                Width="40"/>
                    </StackPanel>
                    <StackPanel Grid.Column="4"
                                 Margin="-280,35,90,0">
                        <Image Source="img/letter-n.png"
                               Width="40"/>
                    </StackPanel>
                    <StackPanel Grid.Column="5"
                                Margin="-360,40,85,0">
                        <Image Source="img/g.png"
                               Width="40"/>
                    </StackPanel>
                    <StackPanel Grid.Column="6"
                                Margin="-460,25,80,0">
                        <Image Source="img/letter-l.png"
                               Width="50"/>
                    </StackPanel>
                    <StackPanel Grid.Column="7"
                                Margin="-559,38,80,0">
                        <Image Source="img/letter-e .png"
                               Width="40"/>
                    </StackPanel>

                </Grid>
            </StackPanel>
            <!--จอเเสดงผล-->
            <StackPanel Grid.Row="2"
                        Height="130"
                        Width="400"
                        Margin="0,-50,0,0">
                <Border BorderBrush="DarkGray"
                        BorderThickness="9"
                        Height="130"
                        CornerRadius="20"
                        Width="400">
                    <TextBlock Background="Transparent"
                               Foreground="#fff"
                               TextAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="50"
                               FontWeight="Bold"
                               x:Name="txtb1"/>
                </Border>
            </StackPanel>
            <!--Textbox-->
            <StackPanel Grid.Row="3"
                        Margin="0,10,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <TextBox Tag="ป้อนตัวเลข"
                             Grid.Column="0"
                             Style="{DynamicResource TextBoxStyle}"
                             Margin="50,0,0,0"
                             x:Name="txt1" TextChanged="txt1_TextChanged"/>
                    <TextBox Tag="ป้อนตัวเลข"
                             Grid.Column="1"
                             Style="{DynamicResource TextBoxStyle}"
                             Margin="0,0,50,0"
                             x:Name="txt2" TextChanged="txt2_TextChanged"/>
                </Grid>

            </StackPanel>
            <!--Button คำณวน-->
            <StackPanel Grid.Row="4"
                        Height="60"
                        Margin="0,-60,0,0">
                <Grid Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="250"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="60,0,0,0">
                        <Button Style="{DynamicResource ButtonStyle}"
                                Content="คำณวน"
                                Cursor="Hand"
                                x:Name="btn1" Click="btn1_Click"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Margin="0,0,60,0">
                        <Button Style="{DynamicResource Button1Style}"
                                Content="ลบ"
                                Cursor="Hand"
                                x:Name="btn2" Click="btn2_Click"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <!--Button Home-->
            <StackPanel Grid.Row="5"
                        Margin="0,-60,0,0">
                <Button Style="{DynamicResource ButtonHomeStyle}"
                        Content="Home"
                        Cursor="Hand"
                        x:Name="btn3" Click="btn3_Click"/>

            </StackPanel>

        </Grid>
        <!--End-->
    </Border>
</Window>
